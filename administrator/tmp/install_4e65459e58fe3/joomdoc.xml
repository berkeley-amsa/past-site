<?xml version="1.0" encoding="utf-8"?>
<install type="component" version="1.5.0">
	<name>JoomDOC</name>
	<creationDate>2011-09-01</creationDate>
	<author>ARTIO s.r.o.</author>
	<authorEmail>info@artio.net</authorEmail>
	<authorUrl>http://www.artio.net/joomla-extensions/document-management</authorUrl>
	<copyright>Copyright (C) 2011 ARTIO s.r.o.. All rights reserved.</copyright>
	
    <license>http://www.gnu.org/copyleft/gpl.html</license>
    
        
	<licenser>GNU/GPL</licenser>
    
                
    <version>3.1.2 Standard</version>
    
	<installfile>install.joomdoc.php</installfile>
	<uninstallfile>uninstall.joomdoc.php</uninstallfile>
	<files folder="site">
        <folder>assets</folder>
        <folder>controllers</folder>
        <folder>views</folder>
        <filename>controller.php</filename>
        <filename>index.html</filename>
        <filename>joomdoc.php</filename>
        <filename>router.php</filename>
	</files>
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<administration>
		<languages folder="language/admin">
            <language tag="en-GB">en-GB/en-GB.com_joomdoc.ini</language>
            <language tag="en-GB">en-GB/en-GB.com_joomdoc.menu.ini</language>
            <language tag="en-GB">en-GB/en-GB.com_joomdoc.sys.ini</language>
            <language tag="en-GB">en-GB/en-GB.com_joomdoc.upgrade.ini</language>
            <language tag="en-GB">en-GB/en-GB.plg_editors-xtd_joomdoc.ini</language>
            <language tag="en-GB">en-GB/en-GB.plg_editors-xtd_joomdoc.sys.ini</language>
            <language tag="en-GB">en-GB/en-GB.plg_search_joomdoc.ini</language>
            <language tag="en-GB">en-GB/en-GB.plg_search_joomdoc.sys.ini</language>
            <language tag="fi-FI">fi-FI/fi-FI.com_joomdoc.ini</language>
            <language tag="fi-FI">fi-FI/fi-FI.com_joomdoc.sys.ini</language>
            <language tag="fi-FI">fi-FI/fi-FI.com_joomdoc.upgrade.ini</language>
		</languages>
		<menu img="../components/com_joomdoc/assets/images/icon-16-joomdoc.png">JOOMDOC</menu>
		<submenu>
			<menu img="../components/com_joomdoc/assets/images/icon-16-cpanel.png"
				link="option=com_joomdoc">JOOMDOC_CONTROL_PANEL</menu>
			<menu img="../components/com_joomdoc/assets/images/icon-16-documents.png"
				link="option=com_joomdoc&amp;view=documents">JOOMDOC_DOCUMENTS</menu>				
			<menu img="../components/com_joomdoc/assets/images/icon-16-upgrade.png"
				link="option=com_joomdoc&amp;view=upgrade">JOOMDOC_UPGRADE</menu>
		</submenu>
		<files folder="admin">
			<folder>controllers</folder>
            <folder>elements</folder>
            <folder>extensions</folder>
            <folder>libraries</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>defines.php</filename>
            <filename>index.html</filename>
            <filename>install.joomdoc.php</filename>
            <filename>joomdoc.php</filename>
            <filename>uninstall.joomdoc.php</filename>
		</files>
	</administration>
</install>